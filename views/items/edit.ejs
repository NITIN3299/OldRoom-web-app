<%- include('../partials/header') %>



<div class="container">
  <h1 style="text-align: center;">Edit <%=item.name %></h1>
  <div style="width: 30%; margin: 25px auto;">
<form action="/oldroom/<%=item._id%>?_method=PUT" method="POST">
    <div class="form-group">
        <input class="form-control" type="text" name="item[name]" value="<%=item.name%>">
    </div>
    <div class="form-group">
      <input class="form-control" type="number" name="item[price]" value="<%=item.price%>">
  </div>
     <div class="form-group">
        <input class="form-control" type="text" name="item[image]" value="<%=item.image%>">
     </div>
     <div class="form-group">
      <input class="form-control" type="text" name="item[description]" value="<%=item.description%>">
   </div>
     <div class="form-group">
         <button class="btn btn-lg btn-info btn-block">UPDATE!</button>
    </div>

</form>
<a href="/oldroom"> <-Go back </a>
</div>


</div>

