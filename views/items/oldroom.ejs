<%- include('../partials/header') %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
       <h1>Welcome to OldRoom</h1>
       <p>Buy,Sell and Find about just automobiles...</p>
       <p>
           <a class="btn btn-primary btn-lg" href="/oldroom/new">ADD NEW ITEM</a>
       </p>
    </div>
    </header>


  <div class="row" style="text-align: center; display: flex; flex-wrap: wrap;">
     <% items.forEach(function(item){ %>
      <div class="col-md-3 col-sm-6">
          <div class="img-thumbnail">
             <img class="img-fluid" src="<%= item.image %>">
             <div class="caption">
                <h3><%= item.name %></h3>
              </div>
              <a class="btn btn-info btn-sm" href="/oldroom/<%= item._id %>">More Info</a>
            </div>
         
      </div>
     <% }); %>
  </div>
</div>
<%- include('../partials/footer') %>